<%= form_for :post, url: post_path(@post.id), method: :patch do |f| %>
    <div class = "container">
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title,  :class => 'form-control'%>    
    </p>

    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body , :class =>  'form-control' %>    
    </p>

    <p>
    <%= f.submit ("Submit") , :class => 'form-control btn-dark' %>
    </div>
<% end %>